<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/centerRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        tools:ignore="ObsoleteLayoutParam">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_create_group_cancel"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_create_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:gravity="center"
                android:text="@string/home_create_group"
                android:textColor="@color/light_blue_color"
                android:textSize="@dimen/textsize_15"
                tools:ignore="HardcodedText"
                android:visibility="visible"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/tv_join_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:gravity="center"
                android:text="@string/home_join_group"
                android:textColor="@color/light_blue_color"
                android:textSize="@dimen/textsize_15"
                tools:ignore="HardcodedText"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/light_blue_color"
                android:background="@drawable/shape_create_group_cancel"
                android:textSize="@dimen/textsize_15"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
