<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <!--<androidx.core.widget.NestedScrollView style="@style/LoginFormScrollView">

        <LinearLayout style="@style/LoginFormContainer">

            <ImageView
                style="@style/LoginLogo"
                tools:ignore="ContentDescription" />-->

    <ImageView
        android:layout_width="@dimen/margin_90"
        android:layout_height="@dimen/margin_90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_60"
        android:src="@drawable/ic_icon_login"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/Widget.Vector.TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_reset_password_mail_confirmation_title"
        android:textColor="?vctr_content_primary"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:background="@drawable/shape_kelare_login_bg_5dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/resetPasswordMailConfirmationNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_20"
            android:textColor="@color/text_color_black"
            android:text="@string/login_reset_password_mail_confirmation_notice_new"
            android:textSize="@dimen/textsize_14" />

        <TextView
            style="@style/Widget.Vector.TextView.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_vertical_margin"
            android:text="@string/login_reset_password_mail_confirmation_notice_2"
            android:textColor="?vctr_content_secondary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/resetPasswordMailConfirmationSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginTop="@dimen/layout_vertical_margin"
            android:background="@drawable/shape_kelare_login_button_bg_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14"
            android:text="@string/login_reset_password_mail_confirmation_submit" />

    </LinearLayout>



    <!--</LinearLayout>

</androidx.core.widget.NestedScrollView>-->

</LinearLayout>

