<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kelare.dialer.DialerSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Setting"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_add_account"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_dialer_add_purper"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_icon_back"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sip_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:text="SIP ACCOUNT"
        android:textSize="14sp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/recycler_sip_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_xmpp_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:text="XMPP ACCOUNT"
        android:textSize="14sp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/recycler_xmpp_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/white"/>

</LinearLayout>
