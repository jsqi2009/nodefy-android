<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/margin_16"
    android:background="@drawable/shape_associate_contact_bottom_sheet"
    android:orientation="vertical"
    tools:context=".features.accountcontact.widget.ContactAssociateBottomSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textsize_18"
            android:textStyle="bold"
            android:text="@string/auth_telegram_account_title"/>

        <TextView
            android:id="@+id/skypeAuth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/text_color_black1"
            android:text="@string/auth_telegram_account_description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:orientation="horizontal"
            android:background="@drawable/shape_kelare_login_et_bg_5dp"
            android:gravity="center_vertical">

            <com.hbb20.CountryCodePicker
                android:id="@+id/codePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_countryPreference="us"
                app:ccp_autoDetectCountry="true"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45"
                android:background="@null"
                android:hint="@string/auth_telegram_account_phone_hint"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="0dp"
                android:paddingStart="@dimen/margin_10"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_15"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <TextView
            android:id="@+id/authTelegramView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/shape_kelare_login_button_bg_5dp"
            android:gravity="center"
            android:text="@string/auth_telegram_account_next"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16"
            tools:enabled="false"
            tools:ignore="RelativeOverlap" />


    </LinearLayout>


</LinearLayout>
