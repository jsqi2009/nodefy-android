<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kelare.dialer.xmpp.XMPPLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="XMPP Account"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_icon_back"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/device_list_bg_color"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="ACCOUNT STATUS"
            android:textColor="@color/text_color_black1"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/device_list_bg_color"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:text="Not Connected"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Account Name"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/text_color_dark_gray"
            android:text=""
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat,TextFields" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Enable"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sb_enable"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center_vertical"
            app:sb_show_indicator="false"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/device_list_bg_color"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="USER DETAILS"
            android:textColor="@color/text_color_black1"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Username"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/text_color_dark_gray"
            android:text=""
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat,TextFields" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_domain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Domain"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <EditText
            android:id="@+id/et_domain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat,TextFields" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/device_list_bg_color"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="MORE SETTING"
            android:textColor="@color/text_color_black1"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_advanced"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_advanced"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Account Advanced"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_right_arrow"
            tools:ignore="ContentDescription,ObsoleteLayoutParam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:background="@color/device_list_bg_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="To modify Account Settings, Please disable account first. For details see the Quick Help"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="13sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
