    <im.vector.app.features.home.room.list.UnreadCounterBadgeView
        android:id="@+id/roomCategoryUnreadCounterBadgeView"
        style="@style/Widget.Vector.TextView.Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_60"
        android:gravity="center"
        android:minWidth="16dp"
        android:minHeight="16dp"
        android:paddingHorizontal="4dp"
        android:textColor="?colorOnError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/roomCategoryTitleView"
        app:layout_constraintTop_toTopOf="@id/roomCategoryTitleView"
        tools:background="@drawable/bg_unread_highlight"
        tools:text="24" />

    <ImageView
        android:id="@+id/roomAddImageView"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:src="@drawable/ic_home_add_black"
        app:layout_constraintBottom_toBottomOf="@id/roomCategoryTitleView"
        app:layout_constraintTop_toTopOf="@id/roomCategoryTitleView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/roomNoDataTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:text="@string/home_no_conversations"
        android:textColor="@color/text_color_black1"
        app:layout_constraintTop_toBottomOf="@id/roomCategoryTitleView"
        app:layout_constraintStart_toStartOf="parent"/>

