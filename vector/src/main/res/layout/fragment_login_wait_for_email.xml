<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <!--<androidx.core.widget.NestedScrollView style="@style/LoginFormScrollView">

        <LinearLayout style="@style/LoginFormContainer">

            <ImageView
                style="@style/LoginLogo"
                tools:ignore="ContentDescription" />-->

    <ImageView
        android:layout_width="@dimen/margin_90"
        android:layout_height="@dimen/margin_90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_60"
        android:src="@drawable/ic_icon_login"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:background="@drawable/shape_kelare_login_bg_5dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/loginWaitForEmailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:gravity="center_horizontal"
            android:text="@string/login_wait_for_email_title"
            android:textSize="@dimen/textsize_16"
            android:textColor="?vctr_content_primary" />

        <TextView
            android:id="@+id/loginWaitForEmailNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/layout_vertical_margin"
            android:gravity="start"
            android:textColor="?vctr_content_secondary"
            tools:text="@string/login_wait_for_email_notice" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/margin_16"
            android:indeterminate="true" />

    </LinearLayout>



    <!--</LinearLayout>

</androidx.core.widget.NestedScrollView>-->

</LinearLayout>

