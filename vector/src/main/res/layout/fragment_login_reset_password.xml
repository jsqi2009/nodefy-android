<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <!--<androidx.core.widget.NestedScrollView style="@style/LoginFormScrollView">

        <LinearLayout style="@style/LoginFormContainer">

            <ImageView
                style="@style/LoginLogo"
                tools:ignore="ContentDescription" />-->

    <ImageView
        android:layout_width="@dimen/margin_90"
        android:layout_height="@dimen/margin_90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_60"
        android:src="@drawable/ic_icon_login"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/resetPasswordTitle"
        style="@style/Widget.Vector.TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?vctr_content_primary"
        tools:text="@string/login_reset_password_on"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:background="@drawable/shape_kelare_login_bg_5dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/loginNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="start"
            android:text="@string/login_reset_password_notice2"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textsize_14"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/resetPasswordEmailTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            android:hint="@string/login_reset_password_email_hint"
            app:errorEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resetPasswordEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_kelare_login_et_bg_5dp"
                android:paddingVertical="0dp"
                android:hint="@string/login_reset_password_email_hint2"
                android:paddingStart="@dimen/margin_10"
                android:textSize="@dimen/textsize_14"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                tools:ignore="RtlSymmetry" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordFieldTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            android:hint="@string/login_reset_password_password_hint"
            app:errorEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_kelare_login_et_bg_5dp"
                android:paddingVertical="0dp"
                android:paddingStart="@dimen/margin_10"
                android:textSize="@dimen/textsize_14"
                android:hint="@string/login_reset_password_password_hint"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:ignore="RtlSymmetry" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/conformPasswordFieldTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            android:hint="@string/login_reset_password_conform_password_hint"
            app:errorEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPasswordField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_kelare_login_et_bg_5dp"
                android:paddingVertical="0dp"
                android:paddingStart="@dimen/margin_10"
                android:textSize="@dimen/textsize_14"
                android:hint="@string/login_reset_password_conform_password_hint"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:ignore="RtlSymmetry" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/resetPasswordSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="@string/login_reset_password_submit2"
            android:background="@drawable/shape_kelare_login_button_bg_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:text="@string/kelare_register_sign_in_entry"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_25"
            tools:ignore="HardcodedText"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/create_account_color"/>


    </LinearLayout>




    <!--</LinearLayout>

</androidx.core.widget.NestedScrollView>-->

</LinearLayout>

