<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".kelare.dialer.fragments.ContactFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mTabLayout"
            style="@style/NoPaddingTabLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/shap_tab_20dp"
            android:layout_height="35dp"
            app:tabIndicatorHeight="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:tabIndicatorColor="@color/score_start_color"
            app:tabIndicatorGravity="bottom"
            app:tabSelectedTextColor="@color/red"
            app:tabMode="fixed"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabTextColor="@color/tab_bar_color_default"
            app:tabRippleColor="@android:color/transparent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_add_sip_contact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_dialer_add_purper"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:visibility="visible"
            tools:ignore="ContentDescription,HardcodedText" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dialer_contact_search_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:text="All"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/line_color"/>

        <EditText
            android:id="@+id/et_status"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/scan_tips_color"
            android:text=""
            tools:ignore="LabelFor,TextFields" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_contact_search"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <im.vector.app.kelare.widget.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

    </im.vector.app.kelare.widget.NestedScrollableHost>

</LinearLayout>
