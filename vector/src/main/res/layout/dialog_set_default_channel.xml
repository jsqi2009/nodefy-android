<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/closeImg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/centerRl"
        android:layout_width="match_parent"
        android:layout_below="@+id/closeImg"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg_8dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/account_contact_set_default_title"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/shape_gray_bg_8dp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channelList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_bg_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/account_contact_sheet_cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"/>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/account_contact_save"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
