<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/margin_16"
    android:background="@drawable/shape_associate_contact_bottom_sheet"
    android:orientation="vertical"
    tools:context=".features.accountcontact.widget.ContactAssociateBottomSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="Suspicious0dp,UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textsize_18"
            android:textStyle="bold"
            android:text="@string/auth_whatsapp_account_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/text_color_black1"
            android:text="@string/auth_whatsapp_account_description"/>

        <ImageView
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:layout_marginVertical="@dimen/margin_30"
            android:layout_gravity="center"
            android:src="@drawable/nodefy_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/text_color_black1"
            android:text="@string/auth_whatsapp_account_tips_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/text_color_black1"
            android:text="@string/auth_whatsapp_account_tips_2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/text_color_black1"
            android:text="@string/auth_whatsapp_account_tips_3"/>

    </LinearLayout>


</LinearLayout>
