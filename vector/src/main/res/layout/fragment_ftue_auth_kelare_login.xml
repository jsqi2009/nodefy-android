<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color"
    android:fitsSystemWindows="true"
    tools:context=".features.onboarding.ftueauth.kelare.FtueAuthKelareLoginFragment">

    <ImageView
        android:layout_width="@dimen/margin_80"
        android:layout_height="@dimen/margin_70"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_icon_login"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:background="@drawable/shape_kelare_login_bg_5dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/nodefy_login_sign_in"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textsize_17"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nodefy_login_sign_in_with"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:textColor="@color/text_color_black1"
                android:textSize="@dimen/textsize_15"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_sign_in_type"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_kelare_login_et_bg_5dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:hint="@string/nodefy_login_sign_in_with_username"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,LabelFor,RtlSymmetry"/>

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_icon_down_arrow"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/userNameEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingHorizontal="@dimen/margin_10"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingEnd="48dp"
            android:hint="@string/nodefy_login_sign_in_with_username"
            android:textSize="@dimen/textsize_14"
            android:background="@drawable/shape_kelare_login_et_bg_5dp"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingHorizontal="@dimen/margin_10"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingEnd="48dp"
            android:hint="@string/nodefy_login_sign_in_password"
            android:textSize="@dimen/textsize_14"
            android:background="@drawable/shape_kelare_login_et_bg_5dp"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

        <EditText
            android:id="@+id/serverEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingHorizontal="@dimen/margin_10"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/textsize_14"
            android:hint="@string/nodefy_login_sign_in_homeserver_hint"
            android:background="@drawable/shape_kelare_login_et_bg_5dp"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

        <TextView
            android:id="@+id/forgotPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:text="@string/nodefy_login_sign_in_forget_password"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            tools:ignore="HardcodedText"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/create_account_color"/>

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:text="@string/nodefy_login_sign_in_login"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@drawable/shape_kelare_login_button_bg_5dp"
            tools:ignore="HardcodedText"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14"/>

        <TextView
            android:id="@+id/createAccountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/nodefy_login_sign_in_create_account"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            tools:ignore="HardcodedText"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/create_account_color"/>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_language"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_5"
            android:hint="User name"
            android:text="English"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry"/>

        <ImageView
            android:id="@+id/iv_language_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_down_arrow_white"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
