<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.google.android.flexbox.FlexDirection" />

        <variable
            name="controlsViewModel"
            type="im.vector.app.kelare.voip.viewmodels.ControlsViewModel" />

        <variable
            name="callsViewModel"
            type="im.vector.app.kelare.voip.viewmodels.CallsViewModel" />

        <variable
            name="conferenceViewModel"
            type="im.vector.app.kelare.voip.viewmodels.ConferenceViewModel" />

        <variable
            name="statsViewModel"
            type="im.vector.app.kelare.voip.viewmodels.StatisticsListViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remote_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@{(callsViewModel.currentCallData.contact.name ?? callsViewModel.currentCallData.displayName) , default=`12345`}"
                android:layout_gravity="center"
                android:textColor="@color/text_color_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_dtmf"
                android:layout_gravity="center"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_dialer_et_bg"
                android:gravity="center"
                android:textSize="20sp"
                android:enabled="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/scan_tips_color"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:inputType="text"
                bind:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="call..."
                android:textColor="@color/text_color_black1"
                android:textSize="15sp"
                android:visibility="gone"
                bind:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/ll_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_call_stop"
                    bind:ignore="ContentDescription" />

                <Chronometer
                    android:id="@+id/active_call_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color_black1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:text="00:00:00"
                    android:textColor="@color/text_color_black1"
                    android:textSize="15sp"
                    android:visibility="gone"
                    bind:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mute_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_mute"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_dialer_call_bg"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_call_mute"
                        bind:ignore="ContentDescription" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/tv_mute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="mute"
                        android:textColor="@color/text_color_black1"
                        android:textSize="16sp"
                        bind:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_keypad"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_dialer_call_bg"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_call_keypad"
                        bind:ignore="ContentDescription" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/tv_keypad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="keypad"
                        bind:ignore="HardcodedText"
                        android:textColor="@color/text_color_black1"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_speaker"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_dialer_call_bg"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_call_speaker"
                        bind:ignore="ContentDescription"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/tv_speaker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="speaker"
                        bind:ignore="HardcodedText"
                        android:textColor="@color/text_color_black1"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hold"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_dialer_call_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_call_hold"
                    bind:ignore="ContentDescription"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/tv_hold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="hold"
                    bind:ignore="HardcodedText"
                    android:textColor="@color/text_color_black1"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_keypad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_1_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:tag="1"
                            android:text="1"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_1_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_2_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="2"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_2_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="ABC"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_3_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="3"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_3_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="DEF"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_4_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="4"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_4_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="GHI"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_5_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="5"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_5_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="JKL"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_6_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="6"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_6_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="MNO"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_7"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_7_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="7"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_7_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="PQRS"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_8"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_8_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="8"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_8_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="TUV"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_9"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_9_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="9"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_9_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="WXYZ"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_11"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_11_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="*"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_11_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_10"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_10_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_10_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="+"
                            bind:ignore="HardcodedText"
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_12"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/shape_dialer_keyboard_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_12_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="#"
                            android:textColor="@color/text_color_black"
                            android:textSize="24sp"
                            bind:ignore="HardcodedText"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tv_12_char"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/text_color_black1"
                            android:textSize="17sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_decline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/iv_decline"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:onClick="@{() -> controlsViewModel.hangUp()}"
                android:src="@drawable/ic_call_decline"
                android:visibility="visible"
                bind:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_hide"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Hide"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"
                android:visibility="gone"
                bind:ignore="HardcodedText" />

        </RelativeLayout>

    </RelativeLayout>


</layout>
