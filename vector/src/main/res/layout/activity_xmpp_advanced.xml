<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kelare.dialer.xmpp.XMPPAdvancedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Account Advanced"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_icon_back"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/device_list_bg_color"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="To modify Account Settings, Please disable account first."
        android:textColor="@color/text_color_black1"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/device_list_bg_color"
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="ACCOUNT ADDITIONAL"
        android:textColor="@color/text_color_black1"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_proxy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Out.Proxy"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/et_proxy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/text_color_dark_gray"
            android:text=""
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat,TextFields" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/device_list_bg_color"
        android:layout_marginTop="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="KEEP ALIVE"
        android:textColor="@color/text_color_black1"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Use Ping"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sb_ping"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center_vertical"
            app:sb_show_indicator="false"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_interval"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Interval"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <EditText
            android:id="@+id/et_interval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:inputType="number"
            android:textColor="@color/text_color_dark_gray"
            android:text=""
            android:textAlignment="textEnd"
            tools:ignore="LabelFor,RtlCompat" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/device_list_bg_color"
        android:layout_marginTop="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="TLS CERT MANAGEMENT"
        android:textColor="@color/text_color_black1"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Verify TLS Cert"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="15sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sb_verify"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center_vertical"
            app:sb_show_indicator="false"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:background="@color/device_list_bg_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Please ensure that the TLS certificate is downloaded and verified on the device before enabling 'Verify TLS Cert'"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="13sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
